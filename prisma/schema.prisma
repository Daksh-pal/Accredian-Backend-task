
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Referral {
  id            Int      @id @default(autoincrement())
  referrerName  String   @db.VarChar(50)
  referrerEmail String   @db.VarChar(150)
  refereeName   String   @db.VarChar(50)
  refereeEmail  String   @db.VarChar(150)
  courseName    String?  @db.VarChar(150)
  createdAt     DateTime @default(now())

  @@unique([referrerEmail , refereeEmail])
  @@index([referrerEmail])
  @@index([refereeEmail])

}
